{
  "name": "@norviah/logger",
  "version": "7.0.0",
  "description": "A simple logging system.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build:docs": "typedoc --options typedoc.json",
    "build:alias": "tsc-alias -p tsconfig.json",
    "build:src": "tsc && pnpm run build:alias",
    "build:changelog": "bump changelog generate --config .bumprc.json",
    "prettier:check": "prettier --config .prettierrc.json ./src",
    "prettier:fix": "prettier --config .prettierrc.json --write ./src",
    "eslint": "eslint --config .eslintrc.json ./src",
    "lint": "pnpm run prettier:check && pnpm run eslint",
    "exec": "ts-node -r tsconfig-paths/register"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/norviah/logger.git"
  },
  "keywords": [
    "logging"
  ],
  "author": "norviah",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/norviah/logger/issues"
  },
  "homepage": "https://github.com/norviah/logger#readme",
  "devDependencies": {
    "@norviah/bump": "^1.4.1",
    "@tsconfig/node18": "^18.2.2",
    "@types/app-root-path": "^1.2.8",
    "@types/node": "^20.10.4",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "type-fest": "^4.8.3",
    "typedoc": "^0.25.4",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "app-root-path": "^3.1.0",
    "chalk": "^4.1.2"
  }
}
